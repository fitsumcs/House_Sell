<%- partial('./partials/header')%>
    <%- include ./helpers/helpers.ejs %>
        <div class="container">
            <h3>Edit Your Information !! </h3>
            <form action="/user/<%= currentUser._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <label for="username">First Name</label>
                    <input type="text" class="form-control" aria-describedby="firstName" value="<%= currentUser.firstname %>" id="firstname" name="user[firstname]" required>
                </div>
                <div class="form-group">
                    <label for="username">Last Name</label>
                    <input type="text" class="form-control" aria-describedby="lastName" value="<%= currentUser.lastname %>" id="lastname" name="user[lastname]" required>
                </div>
                <div class="form-group">
                    <label for="username">Birth Date</label>
                    <input type="date" class="form-control" aria-describedby="birthDate" name="user[birthDate]" id="birthdate" value='<%= currentUser.birthDate.getFullYear()%>-<%= addZero(currentUser.birthDate.getMonth())%>-<%= addZero(currentUser.birthDate.getDate())%>'
                        required>
                </div>
                <div class="form-group">
                    <label for="email">Email </label>
                    <input type="email" class="form-control" aria-describedby="userEmail" value="<%= currentUser.email %>" id="email" name="user[email]" required>
                </div>
                <div class="form-group">
                    <label for="username">Phone</label>
                    <input type="tal" class="form-control" aria-describedby="phoneNumber" value="<%= currentUser.phone %>" id="phone" name="user[phone]" pattern="[0][0-9]{9}" required>
                </div>
                <button type="submit" class="btn btn-primary">Edit User</button>
            </form>

        </div>




        <%- partial('./partials/footer')%>