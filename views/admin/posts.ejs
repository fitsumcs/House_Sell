<% layout('./layout')%>
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Posts</h1>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">List of Posts</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>

                                <th>Title</th>
                                <th>Author</th>
                                <th>Price</th>
                                <th>City</th>
                                <th>Location</th>
                                <th>Posted At</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% allHouse.forEach( house => { %>
                                <tr>
                                    <td>
                                        <%=house.title%>
                                    </td>
                                    <td>
                                        <%=house.author.username%>
                                    </td>
                                    <td>
                                        <%=house.price%>
                                    </td>
                                    <td>
                                        <%=house.city%>
                                    </td>
                                    <td>
                                        <%=house.location%>
                                    </td>
                                    <td>
                                        <%=house.createdAt.toDateString()%>
                                    </td>
                                    <td>
                                        <form class="din" action="/admin/posts/<%= house._id %>?_method=DELETE" method="post">
                                            <button class="btn btn-outline-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>