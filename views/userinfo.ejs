<%- include('./partials/header')%>


    <div class="container">
        <h4>User Information Detail</h4>
        <div class="row">

            <div class="col-md-9">

                <div class="card pr-3" style="width: 18rem;">
                    <i class="fa fa-user-circle-o fa-5x p-3" aria-hidden="true"></i>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>First Name :</strong>
                            <%= currentUser.firstname%>
                        </li>
                        <li class="list-group-item"><strong>Last Name :</strong>
                            <%= currentUser.lastname%>
                        </li>
                        <li class="list-group-item"><strong>Birth Date :</strong>
                            <%= currentUser.birthDate.toDateString() %>
                        </li>
                        <li class="list-group-item"><strong>Email  :</strong> Your Mail
                        </li>
                        <li class="list-group-item"><strong>Phone  :</strong> Your Phone
                        </li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="card-link">Edit Info</a>
                    </div>
                </div>

            </div>
        </div>

    </div>


    <%- include('./partials/footer')%>